{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "es2021",
      "dom",
      "webworker"
    ],
    "types": [
      "core-js",
      "jquery"
    ],
    "sourceMap": true,
    "sourceRoot": "./src/",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "strict": true,
  },
  "exclude": ["**/*.spec.ts"]
}
